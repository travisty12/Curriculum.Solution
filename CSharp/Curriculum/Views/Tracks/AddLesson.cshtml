@{
  Layout = "_Layout";
}

@model Curriculum.Models.Track

<h2>Add a lesson</h2>

<h4>Add a lesson to this track: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TrackId)

  @Html.Label("Select lesson")
  @Html.DropDownList("LessonId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Return to details", "Details", new { id = Model.TrackId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>