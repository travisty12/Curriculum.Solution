@{
  Layout = "_Layout";
}

@using Curriculum.Models;
@model List<Curriculum.Models.Lesson>;
<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No lessons have been added yet.</h3>
}
else {
  <ul>
    @foreach (Lesson lesson in Model)
    {
      <li>@Html.ActionLink($"{lesson.Title}", "Details", new { id = lesson.LessonId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new lesson", "Create")</p>
<p>@Html.ActionLink("Return home", "Index", "Home")</p>